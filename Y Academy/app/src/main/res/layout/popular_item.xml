<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="240dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_shape"
    android:orientation="vertical">

    <!-- First Vertical Item: Image -->
    <ImageView
        android:id="@+id/imageCategory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_item_popular"
        android:scaleType="fitXY" />

    <!-- Second Vertical Item: Category Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Line: Title and Icon -->
        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryTitleId"
                android:textColor="#FF6B00"
                android:fontFamily="@font/jost_bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category Title" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save" />
        </LinearLayout>

        <!-- Second Line: Description -->
        <TextView
            android:fontFamily="@font/jost_bold"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Category Description" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


                <!-- Second TextView: Price -->
                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/custom_blue"
                    android:fontFamily="@font/jost_bold"
                    android:text="10" />


            <!-- Second TextView: Rating -->
            <TextView
                android:id="@+id/textRating"
                android:layout_width="0dp"
                android:drawableStart="@drawable/ic_star"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text="4.2" />

            <!-- Third TextView: Student Count -->
            <TextView
                android:id="@+id/textStudentCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:text="7830 Std" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
