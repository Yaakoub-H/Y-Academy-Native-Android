<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_shape"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/leftElement"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_item_up_left_up_left" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_margin="15dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <!-- First Line: Title and Icon -->
        <LinearLayout
            android:layout_weight="0.25"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryTitleId"
                android:layout_weight="0.9"
                android:textColor="#FF6B00"
                android:fontFamily="@font/jost_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphic Design" />

            <ImageView
                android:id="@+id/icon"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save" />
        </LinearLayout>

        <!-- Second Line: Description -->
        <TextView
            android:fontFamily="@font/jost_bold"
            android:layout_weight="0.25"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Graphic Design Advanced Course" />

        <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:fontFamily="@font/jost_bold"
               android:layout_weight="0.25"
               android:layout_marginRight="8dp"
               android:layout_marginLeft="8dp"
               android:textColor="@color/custom_blue"
               android:id="@+id/priceValue"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="28" />

           <TextView
               android:fontFamily="@font/jost_bold"
               android:textColor="@color/custom_blue"
               android:layout_marginEnd="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="$" />
    </LinearLayout>


        <TextView
            android:layout_marginRight="8dp"
            android:layout_weight="0.25"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/jost_bold"
            android:id="@+id/textPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star"
            android:text="4.2  | 14580 Std" />
    </LinearLayout>
</LinearLayout>
