<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.QuizApplication" parent="Base.Theme.QuizApplication" />

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>

    <!-- styles.xml -->
    <style name="SpecialOfferText">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Styles for TextViews -->
    <style name="HeaderText">
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#202244</item>
    </style>

    <style name="SeeAllText">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0961F5</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="SpeceficCategorieText">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#A0A4AB</item>
    </style>

    <style name="course_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#202244</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#A0A4AB</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AllCategoryTextItem" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#CC202244</item>
        <item name="android:textAlignment">center</item>
    </style>



</resources>